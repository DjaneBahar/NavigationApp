        android:id="@+id/nav_insights"
        android:name="com.example.application.navigationapp.ui.InsightsFragment"
        android:label="Insights"
        tools:layout="@layout/fragment_insights" />

    <fragment
        android:id="@+id/nav_profile"
        android:name="com.example.application.navigationapp.ui.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile" />

    <fragment
        android:id="@+id/nav_leaderboard"
        android:name="com.example.application.navigationapp.ui.LeaderboardFragment"
